# WordPress Test Environment Configuration
# Copy this file to .env and update with your local values

# WordPress URL (for E2E tests)
WP_BASE_URL=http://localhost:8888

# Admin credentials (for E2E tests)
WP_USERNAME=admin
WP_PASSWORD=password

# Database configuration (for PHPUnit tests)
WP_TESTS_DIR=/tmp/wordpress-tests-lib
WP_CORE_DIR=/tmp/wordpress

# Test database
DB_NAME=wordpress_test
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost

# Optional: Headless mode
# Set to 'false' to see browser during tests
HEADLESS=true

# Optional: Slow down tests for debugging
# SLOW_MO=100

# Optional: Screenshot on failure only
# SCREENSHOT=only-on-failure
