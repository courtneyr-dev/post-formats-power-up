{
  "name": "courane01/post-formats-for-block-themes",
  "description": "Modernizes WordPress post formats for block themes with format-specific patterns, auto-detection, and enhanced editor experience.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Courtney Robertson",
      "homepage": "https://profiles.wordpress.org/courane01/"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "yoast/phpunit-polyfills": "^2.0"
  },
  "scripts": {
    "test": [
      "@phpcs",
      "@phpstan",
      "@phpunit"
    ],
    "phpcs": "phpcs -d memory_limit=512M --standard=WordPress --extensions=php --colors --ignore=*/vendor/*,*/node_modules/*,*/tests/* .",
    "phpcbf": "phpcbf -d memory_limit=512M --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/*,*/tests/* .",
    "phpstan": "phpstan analyse --memory-limit=1G includes/ blocks/ post-formats-for-block-themes.php",
    "phpunit": "phpunit",
    "i18n": "wp i18n make-pot . languages/post-formats-for-block-themes.pot --exclude=node_modules,vendor,tests",
    "build": [
      "@test",
      "@i18n"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
